---
import Layout from "../layouts/Layout.astro";
import Guitarra from "../components/Guitarra.astro";

const url = `${import.meta.env.API_URL}/guitarras?populate=imagen`;

const respuesta = await fetch(url);
const { data } = await respuesta.json();
---

<!-- parte javascript -->
<Layout
  title="Tienda"
  description="Tienda de Guitarras , cursos , blog , instrumentos musicales"
>
  <main class="contenedor">
    <h1 class="heading">Nuestra Coleccion</h1>
    <div class="grid">
      {data?.map((guitarra) => <Guitarra propiedades={guitarra.attributes} />)}
    </div>
  </main>
</Layout>

