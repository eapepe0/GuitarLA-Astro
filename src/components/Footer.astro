---
const pathname = Astro.url.pathname;
---

<footer class="footer">
  <div class="contenedor contenido">
    <nav class="navegacion">
      <a href="/" class={pathname === "/" ? "active" : ""}>Inicio</a>
      <a href="/nosotros" class={pathname === "/nosotros" ? "active" : ""}
        >Nosotros</a
      >
      <a href="/tienda" class={pathname === "/tienda" ? "active" : ""}>Tienda</a
      >
      <a href="/blog" class={pathname === "/blog" ? "active" : ""}>Blog</a>
    </nav>
    <p class="copyright">
      Todos los derechos reservados {new Date().getFullYear()}
    </p>
  </div>
</footer>

<style>
  .footer {
    background-color: rgb(36, 34, 34);
    padding: 5rem 0;
    margin-top: 5rem;
  }

  @media (min-width: 768px) {
    .contenido {
      display: flex;
      justify-content: space-between;
    }
  }

  .copyright {
    color: var(--white);
  }

  .navegacion {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .navegacion {
      flex-direction: row;
    }
  }

  .navegacion a,
  .copyright {
    color: var(--white);
    font-size: 1.6rem;
    text-decoration: none;
    font-weight: 700;
  }

  .navegacion a:hover,
  .active {
    border-bottom: 2px solid var(--primary);
    color: var(--primary);
  }
  .navegacion a {
    text-transform: uppercase;
  }

  .copyright {
    text-align: center;
    font-size: 1.8rem;
  }
</style>
