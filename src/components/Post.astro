---
const { Titulo, contenido, url, imagen } = Astro.props.propiedades;
const imagenPost = imagen.data.attributes.formats.medium.url;
---

<article>
  <img src={imagenPost} alt="" srcset="" />
  <div class="contenido">
    <h3>{Titulo}</h3>
    <p class="fecha"></p>
    <p class="resumen">{contenido}</p>
    <a href={`/blog/${url}`} class="enlace">Leer Post</a>
  </div>
</article>

<style>
  .post {
    max-width: 80rem;
    margin: 0 auto;
  }

  .contenido {
    padding: 1.5rem;
  }

  .contenido h3 {
    font-weight: 900;
    font-size: 2.8rem;
    margin: 0;
  }

  .resumen {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 6;
    overflow: hidden;
    font-size: 1.8rem;
  }

  .enlace {
    margin-top: 2rem;
    display: block;
    background-color: var(--black);
    color: var(--white);
    text-decoration: none;
    padding: 0.5rem;
    text-align: center;
    text-transform: uppercase;
    font-size: 1.4rem;
    font-weight: 900;
    transition-property: background-color;
    transition-duration: 300ms;
    padding: 1rem;
  }

  .enlace:hover {
    background-color: var(--primary);
  }

  .fecha {
    font-size: 1.6rem;
    color: var(--primary);
  }

  .texto {
    white-space: pre-wrap;
  }

  .mt-3 {
    margin-top: 3rem;
  }
</style>
